<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homecoming.homecoming_app">

    <!-- Needed for Flask calls + ElevenLabs playback -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Needed for microphone recording (long-press to talk) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- System overlay permission - allows app to draw over other apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Foreground service permission for overlay service (Android 14+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <application
        android:name="${applicationName}"
        android:label="homecoming_app"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="false">
        <!-- usesCleartextTraffic=false is fine since you're using HTTPS.
             Set true only if you ever point to http:// during dev. -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:enableOnBackInvokedCallback="true">
            <!-- Transparency and overlay flags -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!-- Flutter Overlay Window Service - REQUIRED by flutter_overlay_window package -->
        <service
            android:name="flutter.overlay.window.flutter_overlay_window.OverlayService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="System overlay window for AI assistant" />
        </service>

        <!-- This is required by Flutter to show a splash while launching -->
        <meta-data
            android:name="io.flutter.embedding.android.NormalTheme"
            android:resource="@style/NormalTheme"
            />
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
</manifest>
